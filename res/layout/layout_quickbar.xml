<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/quick_base_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView android:id="@+id/quick_iv_left"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_centerVertical="true" />

    <HorizontalScrollView
        android:id="@+id/quick_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/quick_iv_left"
        android:layout_toLeftOf="@+id/quick_iv_right"
        android:scrollbars="none"
        android:background="@drawable/background">

	    <LinearLayout
	        android:id="@+id/quick_contenedor"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:paddingTop="5dp"
	        android:paddingBottom="5dp">
	    </LinearLayout>

	</HorizontalScrollView>

	<ImageView android:id="@+id/quick_iv_right"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentRight="true"
         android:layout_centerVertical="true" />

</RelativeLayout>